<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <View
        android:id="@+id/ItemCardHolder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/ItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ItemCardHolder"
        android:layout_alignTop="@+id/ItemCardHolder"
        android:layout_alignEnd="@+id/ItemCardHolder"
        android:layout_alignBottom="@+id/ItemCardHolder"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Item 404"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp" />


</RelativeLayout>